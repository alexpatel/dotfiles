let mapleader=","							

" Move between tabs
noremap <S-H> gT
noremap <S-L> gt

" Forwards/backwards in history
noremap <S-J> <S-H>
noremap <S-K> <S-L>

" Fast scrolling, slow scrolling with <ctrl>
noremap <c-j> j
noremap <c-k> k
noremap j 8j
noremap k 8k

" Focus on address bar on new tab
set! browser.newtab.url=about:blank

" search
map <space> /
map <c-space> ?
set ignorecase
set hlsearch

" Unhighlight search results
nmap <silent> <leader>n :silent nohl<cr>

" Open popups in new tab
set popups=tab

" Show tab numbers 
set tabnumbers

" remove 'Mozilla Firefox' from title
set titlestring=
